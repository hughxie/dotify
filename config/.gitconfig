[user]
	name = Hugh Xie
	email = hughxie@outlook.com

[core]
	editor = nano
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol, space-before-tab
	excludesfile = ~/.gitignore
	commitGraph = true
	pager = diff-so-fancy | less --tabs=4 -RFX

[web]
	browser = chrome

[rerere]
	enabled = 1
	autoupdate = 1

[push]
	default = simple

[color]
	ui = true

[help]
	autocorrect = 1

[diff]
	renames = copies
	compactionHeuristic = true
	algorithm = patience

[protocol]
	version = 2

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[branch]
	autosetuprebase = always
	rebase = true

[difftool]
    prompt = false

[enhancedblame]
	columnsize = 50

[fetch]
	prune = true

[gc]
	writeCommitGraph = true

[log]
	date = local
	decorate = true
	topo-order = true

[push]
	default = simple

[status]
	submodulesummary = true

[merge]
	conflictstyle = diff3

[hub]
	protocol = https
